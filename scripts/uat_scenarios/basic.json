{
  "env": {
    "MARTIN_LOG_STDOUT": "1"
  },
  "auto_wait": true,
  "use_socket": true,
  "socket_token": "uat-token",
  "event_log": "logs/uat_events.ndjson",
  "screenshot_dir": "logs/uat_snapshots",
  "snapshot_lines": 40,
  "steps": [
    {
      "wait_for_event": "loop_ready",
      "timeout": 30
    },
    {
      "wait_for": "martin: Context:",
      "timeout": 30
    },
    {
      "input": "/agent on",
      "input_timeout": 15
    },
    {
      "wait_for_event": "prompt",
      "timeout": 30
    },
    {
      "input": "i want you to investigate this folder and tell me about the project",
      "input_timeout": 15
    },
    {
      "wait_for": "Approve running",
      "timeout": 30
    },
    {
      "input": "no",
      "input_timeout": 10
    },
    {
      "wait_for": "Command touches outside workspace",
      "timeout": 60
    },
    {
      "input": "no",
      "input_timeout": 10
    },
    {
      "wait_for": "Done. OK",
      "timeout": 60
    },
    {
      "wait_for_event": "prompt",
      "timeout": 30
    },
    {
      "input": "what should we do next?",
      "input_timeout": 15
    },
    {
      "wait_for": "Approve running",
      "timeout": 30
    },
    {
      "input": "no",
      "input_timeout": 10
    }
  ]
}
