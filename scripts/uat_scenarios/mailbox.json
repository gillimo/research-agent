{
  "env": {
    "MARTIN_LOG_STDOUT": "1"
  },
  "auto_wait": true,
  "use_socket": true,
  "socket_token": "uat-token",
  "mailbox": true,
  "mailbox_log": "logs/uat_mailbox.ndjson",
  "event_log": "logs/uat_events.ndjson",
  "screenshot_dir": "logs/uat_snapshots",
  "snapshot_lines": 40,
  "mailbox_duration": 90,
  "steps": [
    {
      "wait_for_event": "loop_ready",
      "timeout": 30
    },
    {
      "input": "/agent on",
      "input_timeout": 15
    },
    {
      "wait_for": "Approve running",
      "timeout": 30
    },
    {
      "input": "yes",
      "input_timeout": 10,
      "input_when_prompt": "Approve running"
    },
    {
      "input": "no",
      "input_timeout": 10,
      "input_when_prompt": "Command touches outside workspace"
    },
    {
      "input": "no",
      "input_timeout": 10,
      "input_when_prompt": "Apply suggested fix commands now"
    },
    {
      "wait_for": "Done. OK",
      "timeout": 180
    },
    {
      "wait_for_event": "prompt",
      "timeout": 120
    },
    {
      "input": "i want you to investigate this folder and tell me about the project",
      "input_timeout": 15,
      "input_when_text": "Done. OK",
      "input_when_prompt": "You:"
    },
    {
      "wait_for": "Approve running",
      "timeout": 60
    },
    {
      "input": "no",
      "input_timeout": 10,
      "input_when_prompt": "Approve running"
    },
    {
      "wait_for_event": "prompt",
      "timeout": 120
    }
  ]
}
